<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.project.sondagemocr.CadastroSondagemActivity"
    tools:showIn="@layout/activity_cadastro_sondagem"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:layout_width="198dp"
            android:layout_height="80dp"
            android:id="@+id/spinner_turma" />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_aluno" />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_sondagem_modelo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Poli"
                android:paddingTop="20dp"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:gravity="center"
                android:paddingBottom="30dp"
                android:id="@+id/poli_text"
                android:background="#0000FF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tri"
                android:id="@+id/tri_text"
                android:paddingTop="20dp"
                android:gravity="center"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:paddingBottom="30dp"
                android:background="#5882FA"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Dissi"
                android:paddingTop="20dp"
                android:gravity="center"
                android:paddingBottom="30dp"
                android:id="@+id/di_text"
                android:background="#8181F7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mono"
                android:id="@+id/mono_text"
                android:layout_weight="2"
                android:paddingTop="20dp"
                android:gravity="center"
                android:paddingBottom="30dp"
                android:background="#A9A9F5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Frase"
                android:paddingTop="20dp"
                android:gravity="center"
                android:paddingBottom="30dp"
                android:id="@+id/frase_text"
                android:background="#0404B4"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_frag"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.14"
            android:layout_marginTop="8dp"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado"
            android:id="@+id/textViewResultado"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/limpar"
                android:id="@+id/button"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7dp"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/gravar"
                android:id="@+id/button2"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="7dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
